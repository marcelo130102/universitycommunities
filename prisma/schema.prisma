model Post {
  post_id          Int       @id @default(autoincrement())
  title            String
  content          String
  publication_date DateTime  @default(now())
  user_id          Int
  comments_allowed Boolean   @default(true)
  // Cantidad de personas para el evento
  // Virtual presencial
  // Lugar
  // Fecha del evento
  // Hora del evento
  // Categoria (multiselect)
  // Imagen - opcional
  User             User      @relation(fields: [user_id], references: [user_id])
  Replies          Reply[]
}

model Reply {
  reply_id   Int      @id @default(autoincrement())
  content    String
  reply_date DateTime @default(now())
  user_id    Int
  post_id    Int
  User       User     @relation(fields: [user_id], references: [user_id])
  Post       Post     @relation(fields: [post_id], references: [post_id])
}